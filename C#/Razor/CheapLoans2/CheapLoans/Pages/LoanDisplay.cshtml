@page
@model CheapLoans.Pages.LoanDisplayModel
@{

}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Loan Display</title>
</head>
<body>
    <div>
        <form method="post" asp-page-handler="Display">
            <input type="submit" value="Display" />
        </form>
    </div>
    <div>
        <form method="post" asp-page-handler="Display1">
            <input type="submit" value="Display > 25,000$" />
        </form>
    </div>
    <div>
        <form method="post" asp-page-handler="Display2">
            <input type="submit" value="Display >= 10,000$ < 25,000$" />
        </form>
    </div>
    <div>
        <form method="post" asp-page-handler="Display3">
            <input type="submit" value="Display < 10,000$" />
        </form>
    </div>
    <h3>Results</h3>
    @if (Model.Loans != null && Model.Loans.Any())
    {
        <table>
            <thead>
                <tr>
                    <th>Customer name</th>
                    <th>Loan Amount</th>
                    <th>Annual Interest Rate</th>
                    <th>Number of Payments</th>
                    <th>Monthly Pay</th>
                </tr>
            </thead>
            <Tbody>
                @foreach (var loan in Model.Loans)
                {
                    <tr>
                        <td>@loan.CustName</td>
                        <td>@loan.LoanAmount</td>
                        <td>@loan.AnnualIntRate</td>
                        <td>@loan.NumPayments</td>
                        <td>@loan.CalcMonthlyPay</td>
                    </tr>
                }
            </Tbody>
        </table>
    }
</body>
</html>